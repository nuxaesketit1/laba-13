
#include <iostream>
#include <cmath>
using namespace std;

int main() {

	setlocale(0, "");

	int n, a, b;

	do {

		cout << "Введите количество элементов массива N (N > 2) : ";
		cin >> n;
		cout << endl;

		cout << "Введите первые два элемента массива : ";
		cin >> a >> b;
		cout << endl;

		if (n > 2) {

			int* array = new int[n];

			array[0] = a;
			array[1] = b;
			array[2] = a + b;

			for (int i = 3; i != n; i++) {
				array[i] = 2*array[i - 1];
			}

			cout << "Результат : " << endl;

			for (int i = 0; i != n; i++) {
				cout << array[i] << " ";
			}

			break;

		}
		else {

			cout << "Ошибка ввода количества элементов массива!\nПовторите попытку!.." << endl;

		}

	} while (true);

	cout << endl;
	system("pause");
	return 0;

}
