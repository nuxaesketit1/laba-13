#include <iostream>
#include <cmath>
using namespace std;

int main() {

	setlocale(0, "");

	int n;

	do {

		cout << "Введите количество элементов массива N (N > 0) : ";
		cin >> n;
		cout << endl;

		if (n > 0) {

			int* array = new int[n];

			for (int i = 0; i != n; i++) {

				cout << "Введите очередной элемент массива : ";
				cin >> array[i];

			}

			cout << "Результат : " << endl;

			for (int i = 0; i != (n / 2); i++) {
				cout << array[i] << " ";
				if (array[i] != array[n - i - 1]) {
					cout << array[n - i - 1] << " ";
				} 
			}

			if ((n % 2) == 1) {
				cout << array[n / 2];
			}

			break;

		}
		else {

			cout << "Ошибка ввода количества элементов массива!\nПовторите попытку!.." << endl;

		}

	} while (true);

	cout << endl;
	system("pause");
	return 0;

}
